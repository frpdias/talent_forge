{
  "name": "@talentforge/mcp",
  "version": "1.0.0",
  "private": true,
  "description": "TalentForge MCP Server — expõe recrutamento, assessments e people analytics para agentes AI",
  "type": "module",
  "bin": {
    "talentforge-mcp": "./dist/server.js"
  },
  "scripts": {
    "build": "esbuild src/server.ts --bundle --platform=node --format=esm --outfile=dist/server.js --external:@supabase/supabase-js --external:@modelcontextprotocol/sdk --external:zod",
    "build:check": "tsc --noEmit",
    "dev": "node --watch dist/server.js",
    "start": "node dist/server.js",
    "inspect": "npx @modelcontextprotocol/inspector node dist/server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.1",
    "@supabase/supabase-js": "2.46.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20",
    "esbuild": "^0.25.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
